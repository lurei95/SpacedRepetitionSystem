@page "/Templates"

@using SpacedRepetitionSystem.Components.ViewModels;
@using SpacedRepetitionSystem.Entities.Entities.Cards;
@using SpacedRepetitionSystem.Components.ViewModels.Cards;
@using SpacedRepetitionSystem.Components.Interaction;
@using Blazorise.DataGrid;

@inherits SearchPageBase<CardTemplate, CardTemplateSearchViewModel>

<ViewModelArea ViewModel="@ViewModel">
  <div class="card flex-grow-0 fullsizeCard">
    <div class="card-header bg-dark">
      <div class="row">
        <div class="col col-md-auto text-white">
          Search Templates
        </div>
        <div class="col d-flex justify-content-end">
          <Button Command="@ViewModel?.CloseCommand" IsIconButton="true" TextColor="#e74c3c"></Button>
        </div>
      </div>
    </div>
    <div class="card-body scrollable">
      <WaitSpinner Visible="ViewModel.IsSearching">
        <DataGrid TItem="CardTemplate"
                  Data="@ViewModel.SearchResults" ShowPager="true"
                  @bind-SelectedRow="@ViewModel.SelectedEntity" Editable="true"
                  Striped="true" Bordered="true" Hoverable="true"
                  PageSize="12">
          <DataGridCommandColumn TItem="CardTemplate" Width="160px">
            <EditCommandTemplate>
              <Button Class="grid-edit-button column-button" CommandParameter="@context.Item" Command="@ViewModel?.EditCommand" Style="margin-top: -5px; margin-bottom: -5px"></Button>
            </EditCommandTemplate>
            <DeleteCommandTemplate>
              <Button Class="grid-delete-button column-button" CommandParameter="@context.Item" Command="@ViewModel?.DeleteCommand" Style="margin-top: -5px; margin-bottom: -5px"></Button>
            </DeleteCommandTemplate>
            <NewCommandTemplate>
              <Button Class="grid-new-button column-button" Command="@ViewModel?.NewCommand" Style="margin-top: -5px; margin-bottom: -5px"></Button>
            </NewCommandTemplate>
          </DataGridCommandColumn>
          <DataGridColumn TItem="CardTemplate"
                          Field="@nameof(CardTemplate.CardTemplateId)"
                          Caption="#" Sortable="true">
            <DisplayTemplate>
              <a href="@("/Templates/" + @context.CardTemplateId)">@context.CardTemplateId</a>
            </DisplayTemplate>
          </DataGridColumn>
          <DataGridColumn TItem="CardTemplate"
                          Field="@nameof(CardTemplate.Title)"
                          Caption="Title" Sortable="true" />
          <DataGridColumn TItem="CardTemplate"
                          Field="@nameof(CardTemplate.FieldDefinitions)"
                          Caption="Field Count" Sortable="false">
            <DisplayTemplate>
              @{
                @($"{(context as CardTemplate)?.FieldDefinitions.Count }")
              }
            </DisplayTemplate>
          </DataGridColumn>
        </DataGrid>
      </WaitSpinner>
    </div>
  </div>
</ViewModelArea>

@code
{
  ///<inheritdoc/>
  protected override async Task OnInitializedAsync()
  {
    await base.OnInitializedAsync();
    await ViewModel.Search();
  }
}
