@page "/Login"

@using SpacedRepetitionSystem.Components.ViewModels.Identity;
@using SpacedRepetitionSystem.Components.ViewModels;

@inherits PageBase<LoginViewModel>
@inject Blazored.LocalStorage.ILocalStorageService localStorageService

<ViewModelArea ViewModel="ViewModel">
  <EditForm Model="@ViewModel.User" OnValidSubmit="@ViewModel.TryLogIn">
    <div>
      <br /><br /><br /><br /><br />
    </div>
    <div>
      <h3 style="font-weight:bold; color:purple">Book Stores Login</h3>
    </div>
    <div>
      <br />
    </div>
    <div class="col-12 row">
      <input class="form-control col-12" @bind="ViewModel.User.EmailAddress" placeholder="email address" />
    </div>
    <br />
    <div class="col-12 row">
      <input type="password" class="form-control col-12" @bind="ViewModel.User.Password" placeholder="password" />
    </div>
    <br />
    <div class="col-12 row">
      <span class="col-12"></span>
      <input type="submit" class="form-control col-6 btn btn-primary" value="Login" />
      <a href="/signup" class="col-3">Sign up</a>
    </div>
    <br />
    <div class="col-12 row" style="text-align:left; font-weight:bold">
      <span class="col-12">@ViewModel.LoginMesssage</span>
    </div>
  </EditForm>
</ViewModelArea>

@code
{
  /// <summary>
  /// The athentication state task
  /// </summary>
  [CascadingParameter]
  public Task<AuthenticationState> AuthenticationStateTask { set => ViewModel.AuthenticationStateTask = value; }
}