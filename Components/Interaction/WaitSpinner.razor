@inherits SpacedRepetitionSystem.Components.CustomComponentBase

@if (Visible)
{
  <div class="spinner-container @Class" style="@Style" id="@Id">
    <div class="spinner-border spinner" role="status">
      <span class="sr-only">Loading...</span>
    </div>
  </div>
}
else
{
  @ChildContent
}

<style>
  .spinner-container {
    margin: auto auto;
  }

  .spinner {
    width: 7rem;
    height: 7rem;
  }
</style>

@code
{
  /// <summary>
  /// Wether the wait spinner is visible
  /// </summary>

  [Parameter]
  public bool Visible { get; set; }

  /// <summary>
  /// ChildContent
  /// </summary>
  [Parameter]
  public RenderFragment ChildContent { get; set; }
}
